generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  documento    String?       @unique
  email        String        @unique
  password     String        @default("123456")
  nombre       String?
  rol          String        @default("empleado")
  sessions     UserSession[]
  deviceTokens DeviceToken[]
  orders       Order[]
  suggestions  Suggestion[]
  justifications Justification[]
  comunicados  Comunicado[]
  area_id      String?
  estado       String        @default("Activo")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model UserSession {
  id                String    @id @default(uuid())
  userId            Int
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshTokenHash  String
  deviceId          String?
  deviceName        String?
  ipAddress         String?
  userAgent         String?
  isRevoked         Boolean   @default(false)
  expiresAt         DateTime
  lastUsedAt        DateTime?
  createdAt         DateTime  @default(now())

  @@unique([userId, deviceId])
  @@index([userId])
  @@index([expiresAt])
}

model DeviceToken {
  id         String   @id @default(uuid())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token      String   @unique
  deviceId   String
  deviceName String?
  osType     String? // 'android', 'ios'
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, deviceId])
  @@index([userId])
}

model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  description String?
  status      String   @default("PENDIENTE") // PENDIENTE, COMPLETADO, CANCELADO
  amount      Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model Suggestion {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  area        String
  type        String   // 'RECLAMO', 'SUGERENCIA'
  title       String
  description String
  status      String   @default("PENDIENTE") // PENDIENTE, APROBADO, RECHAZADO
  files       String[] // Array of file URLs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Justification {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  type        String   // 'INASISTENCIA', 'PERMISO'
  startDate   DateTime
  endDate     DateTime
  reason      String
  status      String   @default("PENDIENTE") // PENDIENTE, APROBADO, RECHAZADO
  files       String[] // Array of file URLs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comunicado {
  id                Int      @id @default(autoincrement())
  titulo            String   @db.VarChar(255)
  contenido         String
  imagen_url        String?  @db.VarChar(500)
  fecha_publicacion DateTime @default(now())
  autor_id          Int
  autor             User     @relation(fields: [autor_id], references: [id])
  activo            Boolean  @default(true)
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  @@index([autor_id])
  @@index([activo])
}
